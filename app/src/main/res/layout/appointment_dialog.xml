<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintCircleRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contacts"
        android:layout_width="280dp"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDetalhes"
            android:layout_height="wrap_content"
            android:text="Detalhes"
            android:layout_width="210dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.457"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.117" />

        <TextView
            android:id="@+id/txtData"
            android:layout_width="210dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#454545"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:text="Data:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDetalhes" />

        <TextView
            android:id="@+id/txtHora"
            android:layout_width="210dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#454545"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:text="Hora: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtData" />

        <TextView
            android:id="@+id/txtProcedimento"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-light"
            android:text="Procedimento: "
            android:textColor="#454545"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHora" />

        <TextView
            android:id="@+id/txtProfissional"
            android:layout_width="210dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#454545"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="32dp"
            android:text="Profissional: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtProcedimento" />

        <TextView
            android:id="@+id/txtOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:text="OK"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/topo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.927"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtProfissional" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>