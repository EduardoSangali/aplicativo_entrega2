<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintCircleRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contacts"
        android:layout_width="280dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/closeContact"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close" />

        <TextView
            android:id="@+id/txtContato"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Escolha o canal desejado para falar conosco:"
            android:textColor="#454545"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.258" />

        <ImageView
            android:id="@+id/imgWatsContact"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtContato"
            app:srcCompat="@drawable/icon_whats" />

        <ImageView
            android:id="@+id/imgPhoneContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@+id/imgMailContact"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintStart_toEndOf="@+id/imgWatsContact"
            app:layout_constraintTop_toBottomOf="@+id/txtContato"
            app:srcCompat="@drawable/ic_phone" />

        <ImageView
            android:id="@+id/imgMailContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtContato"
            app:srcCompat="@drawable/ic_mail" />

        <TextView
            android:id="@+id/whatsContato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="WhatsApp"
            android:textColor="@color/black"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="@+id/imgWatsContact"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="@+id/imgWatsContact"
            app:layout_constraintTop_toBottomOf="@+id/imgWatsContact" />

        <TextView
            android:id="@+id/telefoneContato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Telefone"
            android:textColor="@color/black"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="@+id/imgPhoneContact"
            app:layout_constraintStart_toStartOf="@+id/imgPhoneContact"
            app:layout_constraintTop_toBottomOf="@+id/imgPhoneContact" />

        <TextView
            android:id="@+id/emailContato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="@+id/imgMailContact"
            app:layout_constraintStart_toStartOf="@+id/imgMailContact"
            app:layout_constraintTop_toBottomOf="@+id/imgMailContact" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>